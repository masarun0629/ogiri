<div class="main">
<%= link_to '< 前のページへ戻る',:back, class: "redirect_back" %>
<%= link_to '<< トップページへ戻る',root_path, class: "redirect" %>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>新規登録</h2>
  <div class="field">
    <%= f.label :"ニックネーム(スペース含む最大10文字)" %> <br />
    <%= f.text_field :nickname,maxlength:"10" %>
  </div>
  
  <div class="field">
    <%= f.label :"ひとこと(スペース含む最大100文字,4行まで)" %><br />
    <%= f.text_area :profile,maxlength:"100", rows:"4",cols:"41" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
</div>
